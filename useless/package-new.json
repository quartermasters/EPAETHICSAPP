{
  "name": "epa-ethics-app",
  "version": "1.0.0",
  "description": "EPA Ethics Mobile App - EthicsGo",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:admin && npm run install:mobile",
    "install:backend": "cd backend && npm install",
    "install:admin": "cd admin-portal && npm install",
    "install:mobile": "cd mobile && npm install",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-portal && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build:all": "npm run build:backend && npm run build:admin && npm run build:mobile",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-portal && npm run build",
    "build:mobile": "cd mobile && expo build:web",
    "test:all": "npm run test:backend && npm run test:admin && npm run test:mobile && npm run test:integration",
    "test:backend": "cd backend && npm test",
    "test:admin": "cd admin-portal && npm run test",
    "test:mobile": "cd mobile && npm test",
    "test:integration": "mocha tests/integration/system-tests.js --timeout 30000",
    "test:accessibility": "axe-cli admin-portal/out --tags wcag2a,wcag2aa,section508",
    "test:security": "npm audit --recursive",
    "lint:all": "npm run lint:backend && npm run lint:admin && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:admin": "cd admin-portal && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "start:backend": "cd backend && npm start",
    "start:admin": "cd admin-portal && npm start",
    "start:mobile": "cd mobile && expo start",
    "security:scan": "npm audit --audit-level moderate",
    "clean": "npm run clean:backend && npm run clean:admin && npm run clean:mobile",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:admin": "cd admin-portal && rm -rf node_modules .next",
    "clean:mobile": "cd mobile && rm -rf node_modules .expo"
  },
  "keywords": [
    "EPA",
    "ethics",
    "federal",
    "mobile-app",
    "accessibility",
    "fedramp",
    "section508",
    "st-michael-enterprises"
  ],
  "author": "St. Michael Enterprises LLC",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.0",
    "axios": "^1.6.0",
    "@axe-core/cli": "^4.8.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.24"
  },
  "workspaces": [
    "backend",
    "admin-portal", 
    "mobile",
    "shared"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epa/ethics-app.git"
  },
  "bugs": {
    "url": "https://github.com/epa/ethics-app/issues"
  },
  "homepage": "https://ethics.epa.gov"
}